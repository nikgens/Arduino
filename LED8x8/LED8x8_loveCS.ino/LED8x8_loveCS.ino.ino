void ledOn(int x, int y) {
  for (int i = 0; i < 8; i++) {
    for (int k = 0; k < 8; k++) {
      if (i == x && k == y) {
        digitalWrite(rowArray[i], HIGH);
        digitalWrite(columnArray[k], LOW);
        delay(2);
        digitalWrite(rowArray[i], LOW);
        digitalWrite(columnArray[k], LOW);
      }
      else {
        digitalWrite(rowArray[i], LOW);
        digitalWrite(columnArray[k], HIGH);
      }
    }
  }
}

